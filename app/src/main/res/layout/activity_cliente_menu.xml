<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="16dp"
    tools:context=".ClienteMenu">

    <ImageView
        android:id="@+id/cabecario"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ticket"
        android:layout_width="360dp"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:background="@color/grey"
        android:gravity="top"
        android:hint="Ticket"
        android:textAlignment="gravity"
        android:textColorHint="@color/white"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cabecario" />

    <Button
        android:id="@+id/SolicitarA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:backgroundTint="@color/grey"
        android:text="Solicitar Atendimento"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ticket"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:id="@+id/AcessarC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:backgroundTint="@color/grey"
        android:text="Acessar Chat"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/SolicitarA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>